# mange dependencies with brew https://brew.sh/

brew "docker"         # Pack, ship and run any application as a lightweight
                      # container https://www.docker.com/
brew "docker-compose" # Isolated development environments using Docker
                      # https://docs.docker.com/compose/
brew "colima"         # Container runtimes on MacOS (and Linux) with minimal setup
brew "tmux"           # Terminal multiplexer
brew "arduino-cli"    # Arduino command-line interface
                      # https://github.com/arduino/arduino-cli
